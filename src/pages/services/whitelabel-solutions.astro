      title="Whitelabel Solutions & Products"
      subtitle="Ready-to-Brand Digital Products"
      description="Scale your business rapidly with our comprehensive whitelabel solutions. Launch professional SaaS platforms, mobile apps, and automation tools under your brand in weeks, not months."
      features={heroFeatures}
      ctaText="Explore Solutions"
      ctaHref="/contact/"
      image="/blog-placeholder-4.jpg"
      imageAlt="Whitelabel solutions illustration"
    />

    <ServiceFeatures
      title="Complete Whitelabel Product Suite"
      subtitle="What You Get"
      features={features}
      layout="list"
    />

    <section class="pricing-overview">
      <div class="pricing-overview__container">
        <div class="pricing-overview__header">
          <h2 class="pricing-overview__title">Flexible Licensing Models</h2>
          <p class="pricing-overview__description">
            Choose the licensing model that best fits your business needs and growth plans.
          </p>
        </div>
        
        <div class="pricing-overview__grid">
          <div class="pricing-card">
            <h3 class="pricing-card__title">One-Time License</h3>
            <div class="pricing-card__price">
              <span class="pricing-card__amount">$2,500+</span>
              <span class="pricing-card__period">one-time</span>
            </div>
            <ul class="pricing-card__features">
              <li>Complete source code</li>
              <li>Full branding rights</li>
              <li>6 months support</li>
              <li>Documentation included</li>
            </ul>
          </div>
          
          <div class="pricing-card pricing-card--featured">
            <h3 class="pricing-card__title">Revenue Share</h3>
            <div class="pricing-card__price">
              <span class="pricing-card__amount">15-25%</span>
              <span class="pricing-card__period">revenue share</span>
            </div>
            <ul class="pricing-card__features">
              <li>No upfront costs</li>
              <li>Ongoing development</li>
              <li>Continuous support</li>
              <li>Marketing assistance</li>
            </ul>
          </div>
          
          <div class="pricing-card">
            <h3 class="pricing-card__title">Hybrid Model</h3>
            <div class="pricing-card__price">
              <span class="pricing-card__amount">Custom</span>
              <span class="pricing-card__period">pricing</span>
            </div>
            <ul class="pricing-card__features">
              <li>Reduced upfront cost</li>
              <li>Lower revenue share</li>
              <li>Flexible terms</li>
              <li>Partnership benefits</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <ServiceTestimonials
      title="Partner Success Stories"
      subtitle="Client Results"
      testimonials={testimonials}
      layout="social"
    />

    <RelatedServices
      title="Explore Other Services"
      services={relatedServices}
      currentService="/services/whitelabel-solutions/"
    />

    <ServiceCTA
      title="Ready to Launch Your Branded Products?"
      description="Explore our whitelabel catalog and discover how you can enter new markets quickly with professional, ready-to-brand solutions."
      buttons={ctaButtons}
      background="gradient"
      urgency={{
        text: "Limited Time: ",
        highlight: "50% off setup fees for new partners"
      }}
    />
  </Layout>

<style>
.pricing-overview {
  padding: 4rem 0;
  background: var(--background-secondary-color);
}

.pricing-overview__container {
  max-width: var(--container-width);
  margin: 0 auto;
  padding: 0 1rem;
}

.pricing-overview__header {
  text-align: center;
  margin-bottom: 3rem;
}

.pricing-overview__title {
  font-family: var(--serif-font);
  font-size: var(--text-3xl);
  font-weight: 700;
  color: var(--text-color);
  margin: 0 0 1rem 0;
}

.pricing-overview__description {
  font-size: var(--text-lg);
  color: var(--muted-text-color);
  margin: 0;
}

.pricing-overview__grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: 1fr;
}

@media (--medium-up) {
  .pricing-overview__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.pricing-card {
  padding: 2rem;
  background: var(--background-color);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  text-align: center;
  transition: var(--global-transition);
}

.pricing-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px var(--shadow-color);
}

.pricing-card--featured {
  border-color: var(--secondary-color);
  border-width: 2px;
  position: relative;
}

.pricing-card--featured::before {
  content: 'Most Popular';
  position: absolute;
  top: -0.75rem;
  left: 50%;
  transform: translateX(-50%);
  background: var(--secondary-color);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: var(--border-radius);
  font-size: var(--text-xs);
  font-weight: 600;
  text-transform: uppercase;
}

.pricing-card__title {
  font-size: var(--text-xl);
  font-weight: 600;
  color: var(--text-color);
  margin: 0 0 1rem 0;
}

.pricing-card__price {
  margin-bottom: 2rem;
}

.pricing-card__amount {
  display: block;
  font-size: var(--text-3xl);
  font-weight: 700;
  color: var(--secondary-color);
}

.pricing-card__period {
  font-size: var(--text-sm);
  color: var(--muted-text-color);
  text-transform: uppercase;
}

.pricing-card__features {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: left;
}

.pricing-card__features li {
  padding: 0.5rem 0;
  border-bottom: 1px solid var(--border-color);
  position: relative;
  padding-left: 1.5rem;
}

.pricing-card__features li:last-child {
  border-bottom: none;
}

.pricing-card__features li::before {
  content: '✓';
  position: absolute;
  left: 0;
  color: var(--success-color);
  font-weight: 700;
}
</style>