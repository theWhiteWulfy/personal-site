      title="AI Workflow Integration"
      subtitle="Intelligent Business Automation"
      description="Harness the power of artificial intelligence to transform your business processes. From document processing to predictive analytics, we integrate cutting-edge AI technologies that work seamlessly with your existing systems."
      features={heroFeatures}
      ctaText="Get AI Assessment"
      ctaHref="/contact/"
    />

    <ServiceFeatures
      title="Comprehensive AI Integration Services"
      subtitle="AI Technologies We Implement"
      features={features}
      layout="grid"
      columns={3}
    />

    <section class="use-cases">
      <div class="use-cases__container">
        <div class="use-cases__header">
          <p class="use-cases__subtitle">Real-World Applications</p>
          <h2 class="use-cases__title">AI Success Stories Across Industries</h2>
        </div>
        
        <div class="use-cases__grid">
          {useCases.map((useCase) => (
            <div class="use-case-card">
              <div class="use-case-card__industry">{useCase.industry}</div>
              <h3 class="use-case-card__title">{useCase.title}</h3>
              <p class="use-case-card__description">{useCase.description}</p>
              <div class="use-case-card__results">
